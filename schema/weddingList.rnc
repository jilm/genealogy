namespace xi = "http://www.w3.org/2001/XInclude"
namespace xs = "http://www.w3.org/2001/XMLSchema"

#
#  This schema validates the flat wedding list.
#  Such a xml is generated by the XSLT schema makeWeddingList.xsl.
#

grammar {

    include "common.rnc"

    # The root element is just a list
    start = element list { Wedding * }

    # A wedding definition
    Wedding = element wedding { weddingContent }

    weddingContent = (
        Cite ?
        , DatePlace
        , Bride
        , Bridegroom
    ) 

    # a reference to bride
    Bride = element bride { Reference }
  
    # A reference to bridegroom
    Bridegroom = element bridegroom { Reference }

}